@model IEnumerable<WebCoursework.Worker>

@{
    ViewData["Title"] = "Index";
}

<h1>Працівники</h1>
<a href="/Positions">
    <button>Посади</button>
</a>
<a href="/SalaryPayments">
    <button>Зарплати</button>
</a>
<p>
    <a asp-action="Create">Додати</a>
    <form asp-controller="Workers" asp-action="Index">
<p>
    Ім'я: <input type="text" name="firstName" />

    Прізвище: <input type="text" name="lastName" />
    
    <input type="submit" value="Пошук" />
</p>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FirstName)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.FirstNameSort">
                    @Html.DisplayNameFor(model => model.FirstName)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.LastNameSort">
                    @Html.DisplayNameFor(model => model.LastName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Password)
        </th>*@

            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModifiedDateTime)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Office.City.Name)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.OfficeSort">
                    @Html.DisplayNameFor(model => model.Office.Address)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.PositionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.CreatedDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModifiedDateTime)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Office.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.PositionName)
            </td>
            <td>
                <a asp-action="Редагувати" asp-route-id="@item.WorkerId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.WorkerId">Details</a> |*@
                <a asp-action="Видалити" asp-route-id="@item.WorkerId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
