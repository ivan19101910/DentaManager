<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCoursework</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DentaManager</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="naw-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Workers" asp-action="Index">Працівники</a>
                        </li>
                        <li class="naw-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Patients" asp-action="Index">Пацієнти</a>
                        </li>
                        <li class="naw-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Index">Прийоми</a>
                        </li>
                        <li class="naw-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Offices" asp-action="Index">Офіси</a>
                        </li>
                        <li class="naw-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">Послуги</a>
                        </li>
                        <li class="naw-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="WorkerSchedules" asp-action="Index">Розклад працівників</a>
                        </li>
                        @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>*@
                        @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>*@
                    </ul>
                </div>
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <a>Ви увійшли як: @User.Identity.Name</a>
                <a href="/Workers/Logout">
                    Вийти
                </a>
                    }


                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - DentaManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
