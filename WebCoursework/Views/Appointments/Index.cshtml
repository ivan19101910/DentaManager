@model IEnumerable<WebCoursework.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Прийоми</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Додати прийом</a>
</p>
<p>
    <a class="btn btn-primary" href="/AppointmentStatus">
        Статуси прийому
    </a>
    <a class="btn btn-primary" href="/AppointmentServices">
        Послуги
    </a>
    <a class="btn btn-primary" href="/AppointmentPayments">
        Платежі
    </a>
</p>
<form asp-controller="Appointments" asp-action="Index">
    <p>
        Дата: <input type="date" name="date" />
        Час початку: <input type="time" name="startTime" />
        Час кінця: <input type="time" name="endTime" />
        Ім'я лікаря: <input type="text" name="workerFirstName" />
    </p>
    <p>
        Прізвище лікаря: <input type="text" name="workerLastName" />
        Ім'я пацієнта: <input type="text" name="patientFirstName" />
        Прізвище пацієнта: <input type="text" name="patientLastName" />
    </p>
    <p>
        Статус: <input type="text" name="status" align="center" />
        <input type="submit" value="Пошук" />
    </p>
    
    @*Час кінця: <input type="time" name="endTime" />
        Ім'я лікаря: <input type="text" name="workerFirstName" />
        Прізвище лікаря: <input type="text" name="workerLastName" />
        Ім'я пацієнта: <input type="text" name="patientFirstName" />
        Прізвище пацієнта: <input type="text" name="patientLastName" />
        Статус: <input type="text" name="status" />
        <input type="submit" value="Пошук" />*@

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentId)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSort">
                    @Html.DisplayNameFor(model => model.AppointmentDate)
                </a>
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>*@
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TimeStartSort">
                    @Html.DisplayNameFor(model => model.AppointmentTime)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TimeEndSort">
                    @Html.DisplayNameFor(model => model.RealEndTime)
                </a>
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.WorkerFirstNameSort">
                    @Html.DisplayNameFor(model => model.Worker.FirstName) лікаря
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.WorkerLastNameSort">
                    @Html.DisplayNameFor(model => model.Worker.LastName) лікаря
                </a>
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastModifiedDateTime)
        </th>*@
            @*<th>
            @Html.DisplayNameFor(model => model.TotalSum)
        </th>*@
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PatientFirstNameSort">
                    @Html.DisplayNameFor(model => model.Patient.FirstName) пацієнта
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PatientFirstNameSort">
                    @Html.DisplayNameFor(model => model.Patient.LastName) пацієнта
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.StatusSort">
                    @Html.DisplayNameFor(model => model.Status)
                </a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealEndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.LastName)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.CreatedDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastModifiedDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalSum)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.AppointmentId">Редагувати</a> |
                @*<a asp-action="Details" asp-route-id="@item.AppointmentId">Деталі</a> |*@
                <a asp-action="Delete" asp-route-id="@item.AppointmentId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
