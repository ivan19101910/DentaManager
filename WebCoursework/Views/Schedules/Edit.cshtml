@model WebCoursework.Schedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування</h1>

<h4>Розклад</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleId" />
            <div class="form-group">
                <label asp-for="DayId" class="control-label"></label>
                <select asp-for="DayId" class="form-control" asp-items="ViewBag.DayId"></select>
                <span asp-validation-for="DayId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSegmentId" class="control-label"></label>
                <select asp-for="TimeSegmentId" class="form-control" asp-items="ViewBag.TimeSegmentId"></select>
                <span asp-validation-for="TimeSegmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CreatedDateTime" class="form-control" />
                <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastModifiedDateTime" class="form-control" />
                <span asp-validation-for="LastModifiedDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
