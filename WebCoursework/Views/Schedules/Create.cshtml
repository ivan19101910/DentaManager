@model WebCoursework.Schedule

@{
    ViewData["Title"] = "Create";
}

<h1>Створення</h1>

<h4>Розклад</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DayId" class="control-label"></label>
                <select asp-for="DayId" class ="form-control" asp-items="ViewBag.DayId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeSegmentId" class="control-label"></label>
                <select asp-for="TimeSegmentId" class ="form-control" asp-items="ViewBag.TimeSegmentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
