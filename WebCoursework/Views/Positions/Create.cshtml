@model WebCoursework.Position

@{
    ViewData["Title"] = "Create";
}

<h1>Створення</h1>

<h4>Посада</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentPercentage" class="control-label"></label>
                <input asp-for="AppointmentPercentage" class="form-control" />
                <span asp-validation-for="AppointmentPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseRate" class="control-label"></label>
                <input asp-for="BaseRate" class="form-control" />
                <span asp-validation-for="BaseRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositionName" class="control-label"></label>
                <input asp-for="PositionName" class="form-control" />
                <span asp-validation-for="PositionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
